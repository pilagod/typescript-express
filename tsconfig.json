{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "strict": true,
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "paths": {
      "@health/*": [
        "src/health/*"
      ],
    },
    "typeRoots": [
      "./src/typings",
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
}